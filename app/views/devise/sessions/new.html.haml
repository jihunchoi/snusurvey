.col-md-offset-3.col-md-6
  .page-header
    %h1 로그인
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :role => 'form', html: {class: 'form-horizontal'}) do |f|
    .form-group
      = f.label :username, 'ID', class: 'col-sm-2 control-label'
      .col-sm-10
        = f.text_field :username, :autofocus => true, class: 'form-control', placeholder: 'ID'
    .form-group
      = f.label :password, "비밀번호", class: 'col-sm-2 control-label'
      .col-sm-10
        = f.password_field :password, class: 'form-control', placeholder: '비밀번호'
    - if devise_mapping.rememberable?
      .form-group
        .col-sm-offset-2.col-sm-10
          = f.label :remember_me do
            = f.check_box :remember_me
            로그인 유지
    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit "로그인", class: 'btn btn-primary'
        = link_to "가입하기", new_registration_path(resource_name), class: 'btn btn-link'
